<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.humblecoder.pyp.LoginActivity"
    android:background="@color/background"
    android:id="@+id/activity_login_layout"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/application_main_icon"
        android:id="@+id/application_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_row"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/application_icon">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/user"
            android:background="@drawable/bg_rounded_corner_left"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            android:background="@drawable/bg_rounded_corner_right"
            android:id="@+id/username"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_row"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/password_row">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/lock"
            android:background="@drawable/bg_rounded_corner_left"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:background="@drawable/bg_rounded_corner_right"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text"
            android:id="@+id/password"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flat_button_primary_selector"
        android:text="Login"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/password_row"
        android:textColor="@color/black"
        android:id="@+id/login_button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flat_button_secondary_selector"
        android:text="Create new account"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/create_account_button"
        android:textColor="@color/white"
        android:layout_below="@+id/login_button"/>
</RelativeLayout>
